{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "dom.iterable",
      "ES2020.BigInt"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "src"
  ],
  "paths": {
    "emmet.sdk": ["./node_modules/emmet.sdk/"]
  }
}
